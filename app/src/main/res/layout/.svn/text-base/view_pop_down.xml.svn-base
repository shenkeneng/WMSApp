<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"/>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_bg_item"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="重置"
            android:textSize="@dimen/font_large"
            android:textColor="@color/frxs_black_dark"
            android:gravity="center"
            android:padding="20dp"
            android:background="@color/frxs_white"/>

        <TextView
            android:id="@+id/tv_affrim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认"
            android:textSize="@dimen/font_large"
            android:textColor="@color/frxs_white"
            android:gravity="center"
            android:padding="20dp"
            android:background="@color/frxs_red"/>
    </LinearLayout>

</LinearLayout>