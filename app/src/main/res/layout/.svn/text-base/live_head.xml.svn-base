<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_bg_item"
        android:padding="@dimen/common_margin">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/showcase_product_default"
            android:layout_marginRight="@dimen/common_margin"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="由维一德名品家居专"
            android:singleLine="true"
            android:ellipsize="none"
            android:textSize="@dimen/font_small"
            android:layout_alignBottom="@+id/iv"
            android:background="#22fd0000"/>

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:layout_toRightOf="@+id/iv" />

        <TextView
            android:id="@+id/tv_picked_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_name"
            android:layout_toEndOf="@+id/iv"
            android:layout_toRightOf="@+id/iv"
            android:text="@string/picked_time"
            android:textColor="@color/frxs_red"
            android:layout_marginTop="@dimen/common_margin"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥260.00"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_picked_time"
            android:layout_toRightOf="@+id/iv"
            android:textColor="@color/frxs_red"
            android:gravity="bottom"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_price_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥260.00"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_picked_time"
            android:layout_toRightOf="@+id/tv_price"
            android:layout_alignBottom="@+id/tv_price"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/common_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即购买"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_red_btn"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_tiny"
            android:paddingBottom="@dimen/spacing_tiny"
            android:textColor="@color/frxs_white"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_shop_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shop_count"
        android:gravity="center"
        android:background="@drawable/shape_bg_item"
        android:layout_marginTop="@dimen/common_margin"
        android:padding="@dimen/common_margin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品说明"
        android:gravity="center"
        android:background="@drawable/shape_bg_item"
        android:layout_marginTop="10dp"
        android:padding="@dimen/common_margin"/>

</LinearLayout>