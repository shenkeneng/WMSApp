<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            style="@style/ActionBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/frxs_red">
            <include layout="@layout/view_title" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/ic_launcher"
        android:text="@string/pay_success"
        android:gravity="center_horizontal"
        android:drawablePadding="10dp"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/tv_uppicked_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/unpicked_num"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/shopping"
            android:padding="10dp"
            android:background="@drawable/shape_bg_item"
            android:gravity="center"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/remind_the_delivery"
            android:padding="10dp"
            android:background="@drawable/shape_bg_item"
            android:gravity="center"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/order_info"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/tips"/>

</LinearLayout>