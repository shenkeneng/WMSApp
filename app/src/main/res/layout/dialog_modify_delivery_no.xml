<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_normal">

    <EditText
        android:id="@+id/delivery_no_et"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="4"
        android:layout_marginLeft="@dimen/spacing_huge"
        android:layout_marginRight="@dimen/spacing_huge"
        android:selectAllOnFocus="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:orientation="horizontal">

        <com.coorchice.library.SuperTextView
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/spacing_small"
            android:layout_marginLeft="@dimen/spacing_huge"
            android:layout_marginRight="@dimen/spacing_normal"
            app:pressBgColor="@color/frxs_red"
            app:pressTextColor="@color/frxs_white"
            app:stroke_color="@color/dividerColor"
            app:stroke_width="1dp"
            app:corner="@dimen/common_padding"
            android:text="@string/cancel"
            android:textSize="@dimen/font_normal"/>

        <com.coorchice.library.SuperTextView
            android:id="@+id/confirm_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_huge"
            android:padding="@dimen/spacing_small"
            app:pressBgColor="@color/frxs_red"
            app:pressTextColor="@color/frxs_white"
            app:stroke_color="@color/dividerColor"
            app:stroke_width="1dp"
            app:corner="@dimen/common_padding"
            android:text="@string/confirm"
            android:textSize="@dimen/font_normal"/>

    </LinearLayout>
</LinearLayout>