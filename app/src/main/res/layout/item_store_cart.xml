<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/spacing_small"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <CheckBox
        android:id="@+id/select_ck"
        style="@style/default_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:checked="true"
        android:paddingRight="@dimen/spacing_small"/>

    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/product_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/product_tips_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@android:color/black"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="供应商信息"
            android:textColor="@color/frxs_white"
            android:textSize="12sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="商品名字"/>

        <TextView
            android:id="@+id/product_num_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="1个"/>

        <TextView
            android:id="@+id/product_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="￥0.00"/>

        <com.frxs.WMS.widget.CountEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"/>

    </LinearLayout>

</LinearLayout>